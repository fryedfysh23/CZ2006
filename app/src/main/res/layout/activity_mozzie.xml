    <ImageView
        android:id="@+id/mozziePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:src="@drawable/mozzie"
        app:layout_constraintTop_toTopOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="1. Turn the Pail"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mozziePhoto"
        app:buttonTint="@color/design_default_color_error" />
    />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="2. Tip the Vase"

        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/checkBox1"
        app:buttonTint="@color/design_default_color_error" />
    />


    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox2"

        android:text="3. Flip the flowerpot plate"
        android:textSize="20sp"
        android:textStyle="bold"
        app:buttonTint="@color/design_default_color_error" />
    />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox3"

        android:text="4. Loosen the hardened soil"
        android:textSize="20sp"
        android:textStyle="bold"
        app:buttonTint="@color/design_default_color_error" />
    />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox4"

        android:text="5. Clear the roof gutter"
        android:textSize="20sp"
        android:textStyle="bold"
        app:buttonTint="@color/design_default_color_error" />
    />

    <TextView
        android:id="@+id/completionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="I have completed the 5 steps to do my part!"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#CC2525"
        app:layout_constraintTop_toBottomOf="@id/checkBox5"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/home_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        android:scaleX="3"
        android:scaleY="3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>