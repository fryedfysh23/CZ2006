<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.ProfileActivity">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:gravity="start"
        android:text="Name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Actual Name"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintBottom_toTopOf="@+id/email_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:background="@color/grey"
        android:text="Email"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Actual Email"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        app:layout_constraintBottom_toTopOf="@+id/divider"/>

    <View
        style="@style/Divider"
        android:id="@+id/divider"
        android:layout_width="300dp"
        android:color="#FFE0A9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/changepasswordbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Change Password"
        app:backgroundTint="#DD0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/logoutbutton"/>

    <Button
        android:id="@+id/logoutbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Logout"
        app:backgroundTint="#DD0C0C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/GridLayout" />

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="1"
        android:background="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".GridXMLActivity">


        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@color/dark_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:clickable="false"
                android:text="HOME"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textStyle="bold"
                tools:ignore="RtlCompat"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="launchNotification">

            <ImageButton
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:onClick="launchNotification"
                android:src="@drawable/ic_notifications_black_24dp"
                android:tint="@color/dark_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:clickable="false"
                android:text="NOTIFICATION"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textStyle="bold"
                tools:ignore="RtlCompat"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="launchProfile">

            <ImageButton
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:onClick="launchProfile"
                android:src="@drawable/ic_profile_black_24dp"
                android:tint="@color/dark_red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:clickable="false"
                android:text="PROFILE"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textStyle="bold"
                tools:ignore="RtlCompat"/>
        </FrameLayout>
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>